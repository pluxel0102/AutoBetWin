<Application
    x:Class="AutoBet.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Styles/ThemeStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Глобальные настройки шрифта для всего приложения -->
            <FontFamily x:Key="AppFontFamily">Segoe UI Variable Display</FontFamily>
            
            <!-- Настройки рендеринга текста для чёткости -->
            <x:String x:Key="ContentControlThemeFontFamily">Segoe UI Variable Display</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
